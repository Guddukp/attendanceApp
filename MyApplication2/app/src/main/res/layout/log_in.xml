<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c78a3"
    android:orientation="vertical"
    android:id="@+id/rootLayout">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:padding="12dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="WELCOME TO"
        android:textSize="20sp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"/>

    <TextView
        android:id="@+id/fon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_people_outline_black_24dp"
        android:fontFamily="@font/akronim"
        android:padding="12dp"
        android:text="ATTENDACE TRACKING SYSTEM"
        android:textColor="#fff"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="#fff"
        android:drawableLeft="@drawable/ic_contact_mail_black_24dp"
        android:ems="20"
        android:hint="E-mail"
        android:textColorHint="#946868"
        android:text=""
        android:drawablePadding="12dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="16dp"
        android:textColor="#333"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:hint="password"
        android:textColorHint="#946868"
        android:background="#fff"
        android:drawableLeft="@drawable/ic_https_black_24dp"
        android:ems="15"
        android:drawablePadding="12sp"
        android:inputType="textPassword"
        android:textColor="#333"
        android:textSize="15sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckedTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="#ffffff"
            android:gravity="start|center"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:entries="@array/data"
        android:backgroundTint="#333"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"/>
    </FrameLayout>
    <Button
        android:id="@+id/logIn"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="20dp"
        android:text="Log in"
        android:onClick="Login"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:textColor="#f70808"
        android:layout_marginTop="12dp"
        android:background="#3c78a3"
        android:layout_height="20dp"
        android:onClick="Forgot"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="forgot password?" />
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/signUp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="bottom"
        android:onClick="SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="sign up" />
</FrameLayout>
</LinearLayout>
